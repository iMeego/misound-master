<resources>
    <style name="SettingItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">67dp</item>
    </style>
    <style name="SettingItemTitle">
        <item name="android:textSize">@dimen/setting_item_title_size</item>
        <item name="android:textColor">@color/font_black_normal</item>
    </style>
    <style name="SettingItemSummary">
        <item name="android:textSize">@dimen/setting_summary_size</item>
        <item name="android:textColor">@color/font_gray_normal</item>
    </style>
    <style name="SettingsCategorySpace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>
    <style name="SettingButtonItem">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">29dp</item>
    </style>

    <style name="wooferRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rate_woofer_vol</item>
        <item name="android:minHeight">14dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    <style name="wooferVolBar">
        <item name="android:progressDrawable">@drawable/seeker_woofer_vol_normal</item>
        <item name="android:thumb">@drawable/setting_button_subwoofer_volume</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
    </style>
    <style name="playerProgress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/seeker_player_progress</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
        <item name="android:max">1000</item>
        <item name="android:progress">0</item>
    </style>

    <style name="vertical_gainSeeker">
        <item name="android:progressDrawable">@drawable/seeker_woofer_vol_normal</item>
        <item name="android:thumb">@drawable/custom_settings_equalizer_button</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="gainSeeker_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:rotation">90</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">@color/font_gray_normal</item>
        <item name="android:textSize">@dimen/text_size_xh_28px</item>
    </style>

    <style name="SettingItemSpace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/separator1</item>
    </style>

    <style name="ActivityTranparent">
        <item name="android:windowBackground">@color/black_60</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActivityFailure" parent="ActivityTranparent">
        <item name="android:windowBackground">@color/failure</item>
    </style>

    <style name="ActivitySuccessful" parent="ActivityTranparent">
        <item name="android:windowBackground">@color/successful</item>
    </style>

    <style name="Miprogress_bar_big">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_default</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">33dp</item>
    </style>
    <style name="Miprogress_bar_black">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_black</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:minWidth">20dp</item>
    </style>
    <style name="Miprogress_bar_small">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_small</item>
        <item name="android:minHeight">13.5dp</item>
        <item name="android:minWidth">13.5dp</item>
    </style>
</resources>
