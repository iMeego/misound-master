<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/main_upgrade_result"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="@android:color/transparent">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                android:id="@+id/upgrade_result_flag"
                android:layout_marginBottom="11dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xh_28px"
                android:id="@+id/upgrade_result_text"
                android:layout_marginBottom="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="#9eccff"
                  android:textSize="@dimen/text_size_xh_24px"
                  android:id="@+id/upgrade_result_info"/>
    </LinearLayout>
</LinearLayout>